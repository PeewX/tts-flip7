<TableLayout columnWidths="120 60 60 60"
             id="table"
             width="300"
             height="40"
             anchorMin="1 0.5"
             anchorMax="1 0.5"
             rectAlignment="MiddleRight"
             offsetXY="-10 0"
             allowDragging="true"
             returnToOriginalPositionWhenReleased="false"
             color="#000000AA"
             cellPadding ="0">
    <Defaults>
        <Cell dontUseTableCellBackground="true" />
        <Panel color="#000000AA" />
        <Text class="headerText" fontSize="16" fontStyle="Bold" color="#FFFFFF" />
        <Text fontSize="14" alignment="MiddleCenter" />
    </Defaults>

    <Row>
        <Panel color="#000000AA"><Text id="state" fontSize="16" fontStyle="Italic" color="#808080" text="Flip 7"/></Panel>
    </Row>

    <Row>
        <Cell><Panel><Text class="headerText" text=" Player" alignment="MiddleLeft"/></Panel></Cell>
        <Cell><Panel><Text class="headerText" text="Round" /></Panel></Cell>
        <Cell><Panel><Text class="headerText" text="Game" /></Panel></Cell>
        <Cell><Panel><Text class="headerText" text="Total" /></Panel></Cell>
    </Row>

    <Row id="player1" active="false">
        <Cell><Text id="player1-name" text=" Player1" alignment="MiddleLeft"/></Cell>
        <Cell><Text id="player1-round" text="0" /></Cell>
        <Cell><Text id="player1-game" text="0" /></Cell>
        <Cell><Text id="player1-total" text="(0)" /></Cell>
    </Row>
